<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.design.widget.CoordinatorLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.summit.goeazy.sum_a"
    android:background="#fcfcfc"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="160dp"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">


        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapse"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|enterAlwaysCollapsed|enterAlways|scroll"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:fitsSystemWindows="true">



            <android.support.v7.widget.Toolbar
                android:id="@+id/tool"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="pin"
                android:fitsSystemWindows="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/card1"
                    android:orientation="vertical">


                    <ImageButton
                        android:id="@+id/imgb1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="45sp"
                        android:src="@drawable/loc1"
                        android:layout_gravity="center"
                        android:onClick="get_location"/>

                    <TextView
                        android:id="@+id/text_view3"
                        android:layout_width="wrap_content"
                        android:layout_height="45sp"
                        android:layout_gravity="center"
                        android:textColor="#df2424"
                        android:textStyle="bold"
                        android:layout_marginTop="18sp"

                        android:text="Raigarh"
                        android:textSize="29dp" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>



        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>




    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#fcfcfc"
            android:id="@+id/ll"
            android:padding="10dp"
            android:layout_marginTop="160dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:clipToPadding="false">
                <android.support.v7.widget.CardView
                    android:layout_height="170dp"
                    android:layout_width="140dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/card1"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:src="@drawable/food"
                            android:id="@+id/img1"/>
                        <View
                            android:layout_width="55dp"
                            android:layout_height="2dp"
                            android:background="#e2dede"
                            android:layout_marginTop="15dp">

                        </View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food"
                            android:id="@+id/text1"
                            android:layout_marginTop="10dp"/>


                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_height="170dp"
                    android:layout_width="140dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/card2"
                    android:layout_toRightOf="@id/card1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:src="@drawable/fun"
                            android:id="@+id/img2"/>
                        <View
                            android:layout_width="55dp"
                            android:layout_height="2dp"
                            android:background="#e2dede"
                            android:layout_marginTop="15dp">

                        </View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fun"
                            android:id="@+id/text2"
                            android:layout_marginTop="10dp"/>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_height="170dp"
                    android:layout_width="140dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/card3"
                    android:layout_below="@id/card1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:src="@drawable/shopping"
                            android:id="@+id/img3"/>
                        <View
                            android:layout_width="55dp"
                            android:layout_height="2dp"
                            android:background="#e2dede"
                            android:layout_marginTop="15dp">

                        </View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shopping"
                            android:id="@+id/text3"
                            android:layout_marginTop="10dp"/>


                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_height="170dp"
                    android:layout_width="140dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/card4"
                    android:layout_below="@id/card2"
                    android:layout_toRightOf="@id/card3"
                    android:onClick="religious">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:src="@drawable/religious"
                            android:id="@+id/img4"/>
                        <View
                            android:layout_width="55dp"
                            android:layout_height="2dp"
                            android:background="#e2dede"
                            android:layout_marginTop="15dp">

                        </View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Religious"
                            android:id="@+id/text4"
                            android:layout_marginTop="10dp"/>


                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_height="170dp"
                    android:layout_width="220dp"
                    android:layout_marginLeft="45dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/card5"
                    android:layout_below="@id/card3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/about"
                            android:id="@+id/img5"/>
                        <View
                            android:layout_width="55dp"
                            android:layout_height="2dp"
                            android:background="#e2dede"
                            android:layout_marginTop="15dp">

                        </View>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>




        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>






</android.support.design.widget.CoordinatorLayout>


</ScrollView>
